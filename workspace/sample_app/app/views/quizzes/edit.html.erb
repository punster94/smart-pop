<% provide(:title, 'Edit quiz') %>
<h1>Update your Quiz</h1>
<div class="row">
  <div class="span6 offset3">
    <%= nested_form_for(@quiz) do |f| %>
      <%= render 'shared/quiz_error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :start_time %>
      <%= f.datetime_local_field :start_time %>
      <%= f.label :end_time %>
      <%= f.datetime_local_field :end_time %>
      <%= hidden_field_tag 'course_id', params[:course_id] %>
      
      <%= render 'question_panel', f: f %>
      <div class='centered'>
        <%= f.submit "Make Changes", class: "btn btn-large btn-success options-complete" %>
      </div>
    <% end %>
  </div>
</div>